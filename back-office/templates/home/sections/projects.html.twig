 <section class="section bg-light py-5 mb-0" id="mes-realisations">
    <div class="container-fluid container-xxl">
        <div class="section-header">
            <h3 class="section-title">Mes réalisations</h3>
            <small>Les derniers projets sur lesquels j'ai travaillé</small>
            <hr>
        </div>
        <div class="row">
            <div class="col-12">
                <!-- Carousel container --> 
                <div id="carouselHomePage" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-touch="true">
                    <div class="carousel-indicators">
                        {% for key, project in projects %}
                            <button
                                type="button"
                                data-bs-target="#carouselHomePage"
                                data-bs-slide-to="{{ key }}" 
                                {% if key == 0 %}
                                    class="active" aria-current="true"
                                {% endif %} 
                                aria-label="Projet n°{{ 1 + 1 }}"
                            ></button>
                        {% endfor %}
                    </div>
                    <div class="carousel-inner">
                        {% for key,project in projects %}
                            <div class="carousel-item {% if key == 0 %}active{% endif %}">
                                <div class="carousel-item-image-overlay">
                                    <img 
                                        src="{{ asset(project.image ?? 'images/default/project.jpg') }}" 
                                        srcset="{{ asset(project.image ?? 'images/default/project.jpg') }}" 
                                        class="d-block img-fluid mx-auto" 
                                        alt="Image du project"
                                    >
                                </div>
                                <div class="carousel-caption d-none d-md-block text-white">
                                    <h5>
                                        <a 
                                            href="{{ path('website_project_show',    { 
                                                id: project.id,
                                                slug: project.slug
                                            }) }}"
                                            title="Voir les informations sur le projet"
                                            class="text-white"
                                        >
                                            {{ project.name }}
                                        </a>
                                    </h5>
                                    <p>{{ project.description }}</p>
                                </div>
                            </div>                        
                        {% endfor %}
                        <button 
                            class="carousel-control-prev" 
                            type="button" 
                            data-bs-target="#carouselHomePage" 
                            data-bs-slide="prev"
                        >
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button 
                            class="carousel-control-next" 
                            type="button" 
                            data-bs-target="#carouselHomePage"
                            data-bs-slide="next"
                        >
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-end mt-3">
                <a 
                    href="{{ path('website_project_index') }}" 
                    class="text-underline link" 
                    title="Lien vers tous les projets"
                >Voir tous les projets</a>
            </div>
        </div>
    </div>
</section>