{% extends "layouts/auth.html.twig" %}

{% block main %}
    <div class="">
        <h1 class="h5 text-primary">Inscription</h1>
        <p class="text-muted">Obtenez un compte gratuit sur <em>teamee</em> maintenant.</p>
    </div>
    {% include "partials/flashes.html.twig" %}
    {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}
    <div class="row g-2 mb-3">
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
    </div>
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <div class="mb-4">
        <p class="mb-0 fs-12 text-muted fst-italic">
            En cliquant sur ce bouton vous acceptez les
            <a 
                href="" 
                onclick="event.preventDefault()"
                class="text-primary text-decoration-underline fst-normal fw-medium"
            >conditions générales d'utilisation</a>
        </p>
    </div>
    <hr>
    <div class="mt-5 text-center">
        <p class="mb-0">
            Vous avez déjà un compte ? 
            <a 
                href="{{ path('auth_connexion') }}" 
                class="fw-semibold text-primary text-decoration-underline"
            >Se connecter</a> 
        </p>
    </div>


{% endblock %}